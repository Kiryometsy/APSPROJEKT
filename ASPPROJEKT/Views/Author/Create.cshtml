@model Data.Entities.AuthorEntity

<h2>Create Author</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddressId">Address</label>
        <select class="form-control" asp-for="AddressId">
            @foreach (var item in ViewBag.AddressList)
            {
                <option value="@item.Id">@item.City, @item.Street, @item.PostalCode</option>
            }

        </select>
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
