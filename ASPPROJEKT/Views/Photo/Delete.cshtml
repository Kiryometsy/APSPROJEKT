@model Data.Entities.PhotoEntity
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Photo</h2>

<h3>Are you sure you want to delete this photo?</h3>
<div>
    <h4>Photo details:</h4>
    <hr />
    <dl class="row">
        <!-- Display photo details here -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhotoId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Camera)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Camera)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <!-- Add other fields as needed -->

        <dt class="col-sm-2">
            Author ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Id)
        </dd>

        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>

        <dt class="col-sm-2">
            Author's Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Description)
        </dd>

        <dt class="col-sm-2">
            Author's Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Address.City),
            @Html.DisplayFor(model => model.Author.Address.Street),
            @Html.DisplayFor(model => model.Author.Address.PostalCode)
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PhotoId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>