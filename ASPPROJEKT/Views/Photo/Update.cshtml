@model Data.Entities.PhotoEntity
@using Microsoft.AspNetCore.Mvc.Rendering
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewData["Title"] = "Update";
}

<h2>Edit Photo</h2>

<form asp-action="Update" method="post">

    <input type="hidden" asp-for="PhotoId" />

    <div class="form-group">
        <label asp-for="Camera" class="control-label"></label>
        <input asp-for="Camera" class="form-control" />
        <span asp-validation-for="Camera" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Resolution" class="control-label"></label>
        <input asp-for="Resolution" class="form-control" />
        <span asp-validation-for="Resolution" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label"></label>
        <input asp-for="CreatedDate" type="date" class="form-control" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Format" class="control-label"></label>
        <select asp-for="Format" asp-items="Html.GetEnumSelectList<Data.Entities.PhotoFormat>()" class="form-control"></select>
        <span asp-validation-for="Format" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <select class="form-control" asp-for="AuthorId">
            @foreach (var item in ViewBag.AuthorList)
            {
                <option value="@item.Id">@item.Name</option>
            }

        </select>
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-secondary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}